<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hippo.ehviewer.widget.StatusBarLayout
        xmlns:auto="http://schemas.android.com/apk/res-auto"
        android:id="@+id/status_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        auto:statusBarColor="@android:color/transparent">

        <com.hippo.scene.StageLayout
            android:id="@+id/stage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.hippo.ehviewer.widget.StatusBarLayout>

    <!-- Left Drawer -->
    <com.hippo.widget.DrawerFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:maxWidth="320dp"
        android:background="?attr/colorAccent"
        android:fitsSystemWindows="true"
        android:clickable="true"
        tools:ignore="RtlHardcoded">

        <include
            layout="@layout/draw_left"/>

    </com.hippo.widget.DrawerFrameLayout>

</android.support.v4.widget.DrawerLayout>
