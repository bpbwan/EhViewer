<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    auto:forceNoElevation="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/search_category_padding_start"
        android:paddingRight="@dimen/search_category_padding_end"
        android:paddingBottom="@dimen/search_category_padding_bottom">

        <TextView
            android:id="@+id/category_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_category_title_height"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.CategoryTitle"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/category_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
